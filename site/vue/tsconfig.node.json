{
  "extends": "@tsconfig/node20/tsconfig.json",
  "include": ["*.js", "*.ts", "vite.config.mts"],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "allowJs": false,
    "checkJs": false
  }
}
