{% extends 'generic/Popup.twig' %}
{% block popup_id %}toggle-columns-form{% endblock %}
{% block title %}Toggle Columns{% endblock %}
{% block body %}
    <input type="hidden" name="csrf_token" value="{{ csrf_token }}" />
    <p class="toggle-columns-instructions">
        Select which columns you would like to display.
    </p>
    <div class="toggle-columns-menu">
        <div class="toggle-checkbox-area">
            <input type="checkbox" class="toggle-columns-box" id="toggle-registration-section">
            <label>Registration Section</label>
        </div>
        <div class="toggle-checkbox-area">
            <input type="checkbox" class="toggle-columns-box" id="toggle-user-id">
            <label>User ID</label>   
        </div>
        <div class="toggle-checkbox-area">
            <input type="checkbox" class="toggle-columns-box" id="toggle-first-name">
            <label>First Name</label>
        </div>
        <div class="toggle-checkbox-area">
            <input type="checkbox" class="toggle-columns-box" id="toggle-last-name">
            <label>Last Name</label> 
        </div>
        <div class="toggle-checkbox-area">   
            <input type="checkbox" class="toggle-columns-box" id="toggle-pronouns">
            <label>Pronouns</label>
        </div>
        <div class="toggle-checkbox-area">
            <input type="checkbox" class="toggle-columns-box" id="toggle-rotating-section">
            <label>Rotating Section</label>
        </div>
        <div class="toggle-checkbox-area">
            <input type="checkbox" class="toggle-columns-box" id="toggle-time-zone">
            <label>UTC Offset / Time Zone</label>
        </div>
        <div class="toggle-checkbox-area">
            <input type="checkbox" class="toggle-columns-box" id="toggle-view-grades">
            <label>View Grades</label>
        </div>
        <div class="toggle-checkbox-area">
            <input type="checkbox" class="toggle-columns-box" id="toggle-late-days">
            <label>Late Days</label>
        </div>
        <div class="toggle-checkbox-area">
            <input type="checkbox" class="toggle-columns-box" id="toggle-registration-type">
            <label>Registration Type</label>
        </div>
        <div class="toggle-checkbox-area">
            <input type="checkbox" class="toggle-columns-box" id="toggle-edit-student">
            <label>Edit Student</label>
        </div>
        <div class="toggle-checkbox-area">
            <input type="checkbox" class="toggle-columns-box" id="toggle-delete-student">
            <label>Delete Student</label>
        </div>
    </div>
    <div class="toggle-all-buttons">
        <a href="javascript:fillAllCheckboxes(true)" class="btn btn-primary">All On</a>
        <a href="javascript:fillAllCheckboxes(false)" class="btn btn-primary">All Off</a>
    </div>
{% endblock %}

{% block buttons %}
    {{ block('close_button') }}
    <input name="submit" class="btn btn-primary key_to_click" type="submit" value="Submit" id="toggle-student-col-submit" onclick="updateManageStudentsColumns()"/>

{% endblock %}
