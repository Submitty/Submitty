{
  "autograding" : {
        "submission_to_runner" : [  "*.ipynb", "*.png" ],
        "work_to_details" : [ "**/*.ipynb", "**/*.png" ]
    },
  "autograding_method": "docker",
  "resource_limits" : {
    "RLIMIT_NPROC" : 32
  },
  "container_options": {
    "container_image": "submitty/qiskit:latest"
  },
  "testcases": [
    {
      "title": "Executes successfully: example_executed.ipynb",
      "command": "python3 grader.py example.ipynb",
      "points": 1,
      "validation": [
        {
          "method": "fileExists",
          "actual_file": "example_executed.ipynb",
          "show_actual" : "always",
          "show_message" : "always"
        }
      ]
    },
    {
      "pre_commands" : [
        {
          "command" : "cp",
          "testcase" : "test01",
          "source" : "STDOUT.txt",
          "destination" : "./"
        }
      ], 
      "title": "STDOUT",
      "points": 1,
      "validation": [
        {
          "method": "diff",
          "actual_file": "STDOUT.txt",
          "expected_string" : "hello world!"
        }
      ]
    },
    {
      "pre_commands" : [
        {
          "command" : "cp",
          "testcase" : "test01",
          "source" : "one_submitted.png",
          "destination" : "./"
        }
      ], 
      "title": "One",
      "points": 1,
      "validation": [
        {
          "actual_file": "one_submitted.png",
          "expected_file": "one.png",
          "method": "ImageDiff",
          "acceptable_threshold": ".1",
          "show_difference_image" : "always",
          "show_actual": "always",
          "show_expected": "always"
        }
      ]
    },
    {
      "pre_commands" : [
        {
          "command" : "cp",
          "testcase" : "test01",
          "source" : "two_submitted.png",
          "destination" : "./"
        }
      ], 
      "title": "Two",
      "points": 1,
      "validation": [
        {
          "actual_file": "two_submitted.png",
          "expected_file": "two.png",
          "method": "ImageDiff",
          "acceptable_threshold": ".3",
          "show_difference_image" : "always",
          "show_actual": "always",
          "show_expected": "always"
        }
      ]
    },
    {
      "pre_commands" : [
        {
          "command" : "cp",
          "testcase" : "test01",
          "source" : "graph_submitted.png",
          "destination" : "./"
        }
