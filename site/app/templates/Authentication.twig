<div class="content shadow" id="login-box">
    <h1 id="login-guest">Login</h1>
    <!--
    <em>Note: Registered students have not yet been uploaded to the Submitty course databases.  Please check back later.</em>
    -->
    {% if is_saml %}
    <a href="{{ saml_url }}" class="btn btn-primary" id="saml-login">Login with {{ saml_name }}</a>
    {% else %}
    <form action="{{ login_url }}" method="post" id="login">
        <label>
            User ID
            <input type="text" name="user_id" onchange="$(this).val($(this).val().trim())" required autofocus/>
        </label>
        <label>
            Password
            <input type="password" name="password" required />
        </label>
        <label class="inline-label">
            Stay Logged In
            <input type="checkbox" name="stay_logged_in" checked />
        </label>
        <input type="submit" name="login" value="Login" class="btn btn-primary" />
    </form>
    {% endif %}
</div>
