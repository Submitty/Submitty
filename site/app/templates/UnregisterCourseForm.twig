{% extends 'generic/Popup.twig' %}
{% block popup_id %}unregister-user-form{% endblock %}
{% block title %}Unregister{% endblock %}
{% block body %}
    <input type="hidden" name="csrf_token" value="{{ csrf_token }}" />
    <p>Are you sure you want to unregister from this course? Click on "Confirm" to proceed or "Close" to cancel.</p>
{% endblock %}
{% block form %}
    <form method="post" action="{{ unregister_course_url }}">
        {{ parent() }}
    </form>
{% endblock %}
{% block buttons %}
    {{ block('close_button') }}
    <input class="btn btn-primary" type="submit" value="Confirm" />
{% endblock %}
