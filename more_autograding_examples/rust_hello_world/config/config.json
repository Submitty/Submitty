{
    "required_capabilities": "default",
    "autograding_method": "docker",
    "container_options": {
        "container_image": "submitty/rust:latest"
    },
    "allow_system_calls" : [
        "COMMUNICATIONS_AND_NETWORKING_SIGNALS",
        "PROCESS_CONTROL_ADVANCED",
        "PROCESS_CONTROL_NEW_PROCESS_THREAD",
        "PROCESS_CONTROL_SCHEDULING"
    ],
    "autograding": {
        "submission_to_compilation": ["**/*.rs"]
    },
    "testcases" : [
        {
            "type": "Compilation",
            "title": "Compilation",
            "allow_system_calls" : [ "ALLOW_ALL_RESTRICTED_SYSTEM_CALLS" ],
            "command": "/usr/local/cargo/bin/rustc *.rs -o a.out",
            "executable_name": "a.out",
            "points": 5
        },
        {
            "title": "Check Output",
            "details": "Run Program",
            "command": "./a.out",
            "points": 5,
            "validation": [
                {
                    "actual_file": "STDOUT.txt",
                    "method": "diff",
                    "comparison": "byLinebyChar",
                    "expected_string": "Hello World!\n"
                }
            ]
        }
    ]
}