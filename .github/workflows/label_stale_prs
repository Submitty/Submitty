name: Label Stale PRs

on:
  schedule:
  - cron:  '0 0 * * *'
jobs:
  autoClosePr:
    name: auto close pr
    runs-on: ubuntu-latest
    permissions:
      contents: read
      pull-requests: write
    steps:
      - name: Check-out main repository
        uses: actions/checkout@v2
      - name: Label Stale/Abandoned
        run: python .github/bin/label_abandoned_prs.py
        env:
          GH_TOKEN: ${{ secrets.GITHUB_TOKEN }}
        shell: sh
