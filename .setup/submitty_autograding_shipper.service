[Unit]
Description=Submitty Autograding Shipper
Documentation=http://submitty.org

[Service]
User=submitty_daemon
Restart=always
Type=simple
ExecStart=/usr/local/submitty/venv/bin/python3 /usr/local/submitty/autograder/submitty_autograding_shipper.py
TimeoutSec=1min
RuntimeMaxSec=infinity

[Install]
WantedBy=multi-user.target
