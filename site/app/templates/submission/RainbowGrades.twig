<div class="content">
    <header>
        <h1 class="label">
            {% if extra_label is defined %}
                Rainbow Grades {{extra_label}}
            {% else %}
                Rainbow Grades
            {% endif %}
        </h1>
        <div id="rainbow-grades-header">
            {% if rainbow_grades_csv_url is defined %}
                <div class="btn-wrapper">
                    <button
                        class="btn btn-primary"
                        onclick='window.open("{{ rainbow_grades_csv_url }}", "_blank").focus()'
                        tabindex="0"
                    >
                        Download CSV of grades
                    </button>
                </div>
                <p id="rainbow-grades-last-update">
                    Grades last updated on: 
                    <b>{{ grade_summaries_last_run }}</b>
                </p>
            {% endif %}
        </div>
    </header>
    <div id="rainbow-grades">
      {% if show_summary %}
          {{ grade_file|raw }}
      {% else %}
          No grades are available...
      {% endif %}
    </div>
</div>
