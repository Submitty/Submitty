<script>
    window.onload = function() {
        const data = [
          {
            type: "bar",
            x: [],
            y: [],
            marker: {
              color: [],
            },
          }
        ];
        {% for response, attributes in results %}
            data[0].x.push("{{ poll.getResponseString(response)|replace({"\n": " ", "\r": " ", "\t": " "}) }}");
            data[0].y.push({{ attributes['count'] }});
            data[0].marker.color.push("{{ attributes['is_correct'] ? '#2ca02c' : '#1f77b4' }}");
        {% endfor %}
        const title_text = new DOMParser().parseFromString("{{ poll.getName() }}", "text/html");
        const layout = {
          title: title_text.documentElement.textContent,
        }
        Plotly.newPlot("chartContainer", data, layout);
    }
</script>

<div class="content">
    <h1> Viewing poll results for {{ poll.getName() }} </h1>

    <h2> Question: </h2>
    {% include "misc/Markdown.twig" with {
      "content" : poll.getQuestion()
    } only %}
    <br/>
    <div id="chartContainer" style="height: 370px; width: 100%;"></div>
</div>
