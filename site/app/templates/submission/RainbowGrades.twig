<div class="content">

    <header>
        <h1 class="label">
        {% if extra_label is defined %}
            Rainbow Grades {{extra_label}}
        {% else %}
            Rainbow Grades
        {% endif %}
        </h1>
        {% if show_summary and extra_label is defined and extra_label == "For All Students" %}
        <div class="btn-wrapper">
            <button id="rainbow-grade-download-button"
                    class="btn btn-primary"
                    onclick='downloadFile("/output.csv","rainbow_grades")'
                    tabindex="0">
                Download CSV of grades
            </button>
        </div>
        {% endif %}
    </header>
    {% if show_summary and extra_label is defined and extra_label == "For All Students" %}
    <em>
        Information last updated: <span>{{ grade_summaries_last_run }}</span>
    </em>
    {% endif %}
    <div id="rainbow-grades">
      {% if show_summary %}
          {{ grade_file|raw }}
      {% else %}
          No grades are available...
      {% endif %}
    </div>
</div>
