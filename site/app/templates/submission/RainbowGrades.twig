<div class="content">
    <header>
        <h1 class="label">
            {% if extra_label is defined %}
                Rainbow Grades {{extra_label}}
            {% else %}
                Rainbow Grades
            {% endif %}
        </h1>
        <div>
            {% if show_summary and extra_label is defined and is_gradebook is defined and is_gradebook %}
                <div class="btn-wrapper" style="margin:auto;">
                    <button
                        id="rainbow-grade-download-button"
                        class="btn btn-primary"
                        onclick='downloadFile("/output.csv","rainbow_grades")'
                        tabindex="0"
                        style="padding:auto;"
                    >
                        Download CSV of grades
                    </button>
                </div>
                <p style="float:right">
                    Grades last updated on: 
                    <b>
                    <span>{{ grade_summaries_last_run }}</span>
                    </b>
                </p>
            {% endif %}
        </div>
    </header>
    <div id="rainbow-grades">
      {% if show_summary %}
          {{ grade_file|raw }}
      {% else %}
          No Grades Are Available...
      {% endif %}
    </div>
</div>