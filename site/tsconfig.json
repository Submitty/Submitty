{
    "include": [
        "globals.d.ts",
        "./ts/**/*.ts",
        "./tests/**/*.ts",
        "./vue/src/**/*.vue",
        "./public/js/**/*.js"
    ],
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["vue/src/*"]
        },
        "noEmit": true,
        "strict": true,
        "allowJs": true,
        "incremental": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "outDir": "incremental_build",
    }
}
