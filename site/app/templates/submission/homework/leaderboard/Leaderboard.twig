<div id="leaderboard">
  {% if rebuildingGradeable %}
  <p>
    Leaderboard is temporarily unavailable because the gradeable is being
    rebuilt. Please try refreshing the page in a few minutes.
  </p>
  {% else %}
  <h3>{{ title }}</h3>
  <table class="table table-striped" style="width: 100%">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">User/Team</th>
        <th scope="col">Points</th>
        <th scope="col">Time</th>
        <th scope="col">Memory</th>
      </tr>
    </thead>
    <tbody>
      {% for entry in leaderboard %}
      <tr>
        <th scope="row" class="row_number">{{ loop.index }}</th>
        <td>
          {{ entry["name"] }} {% if accessFullGrading %}({{
            entry["user_id"]
          }}){% endif %}
        </td>
        <td>{{ entry["points"] }}</td>
        <td>{{ entry["time"] }}s</td>
        <td>{{ (entry["memory"] / 1000) | round }}MB</td>
        {% endfor %}
      </tr>
    </tbody>
  </table>
  {% endif %}
</div>
