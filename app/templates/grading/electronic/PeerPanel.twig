<div id="peer_info" class="rubric_panel {{ is_ta_grading ? "" : "empty" }}">
    <div>
        {% if is_ta_grading %}
            <div id="rubric-container" class="container">
                <span class="col grading_label">Peer Grading
                    <a class="key_to_click" tabindex="0" title="Edit Peer Marks" aria-label="edit peer marks" onclick = "newEditPeerComponentsForm()">
                        <i class="fas fa-pencil-alt black-btn" aria-hidden="true" style="font-size: 16px; margin: 5px;">
                        </i>
                    </a>
                </span>
                <div class="inner-container" id="peer-grading-box">
                    {% if has_active_version %}
                        <script>
                            $(document).ready(function () {
                                loadTemplates().then(function() {
                                    return reloadPeerRubric('{{ gradeable_id }}', '{{ anon_id }}');
                                });
                            });
                        </script>
                    {% else %}
                        <h4>No Submission</h4>
                    {% endif %}
                </div>
            </div>
        {% else %}
            <div id="no-manual-grading-container">
                <h3> No Manual Grading For This Assignment </h3>
            </div>
        {% endif %}
    </div>
</div>
