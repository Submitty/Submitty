{
    "include": ["./ts/**/*.ts", "./tests/**/*.ts", "globals.d.ts", "./public/js/**/*.js", "./vue/src/**/*.vue"],
    "exclude": ["**/node_modules/**", "**/dist/**"],
    "compilerOptions": {
      "baseUrl": ".",
        "paths": {
            "@/*": ["vue/src/*"]
        },
        "strict": true,
        "allowJs": true,
        "noEmit": true,
        "incremental": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "outDir": "incremental_build",
    }
}
